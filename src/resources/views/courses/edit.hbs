<div class='mt-4'>
    <h4>Update course</h4>
    <form
        class='mt-4'
        method='post'
        action='/courses/{{course._id}}?_method=PUT'
    >
        <div class='form-group'>
            <label for='courseName'>Course name</label>
            <input
                name='name'
                class='form-control'
                id='name'
                value='{{course.name}}'
            />
        </div>
        <div class='form-group'>
            <label for='courseDescription'>Description</label>
            <input
                name='description'
                class='form-control'
                id='description'
                value='{{course.description}}'
            />
        </div>
        <div class='form-group'>
            <label for='coursevideoid'>Video ID</label>
            <input name='videoId' class='form-control' id='videoid' />
        </div>
        <button type='submit' class='btn btn-primary'>Save</button>
    </form>
</div>